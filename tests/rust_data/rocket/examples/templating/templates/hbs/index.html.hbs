{{#*inline "page"}}

<section id="hello">
  <h1>Hi {{ name }}!</h1>
  <h3>Here are your items:</h3>
  <ul>
    {{#each items}}
      <li>{{ this }}</li>
    {{/each}}
  </ul>
</section>

<section id="custom-helper">
  <p>Try going to <a href="/hbs/hello/Your%20Name">/hbs/hello/Your Name</a>.</p>
  <p>Also, check {{ wow "this" }} (custom helper) out!</p>
</section>

{{/inline}}
{{> hbs/layout}}
